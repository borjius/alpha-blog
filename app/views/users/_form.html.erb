<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <!-- use form helpers from rails -->
      <%= form_with(model: @user, local: true, class: "shadow mb-3 bg-info rounded") do |f| %>
        <div class="form-group row">
          <div class="row mb-3 mt-3">
            <%= f.label :username, class: "col-sm-2 col-form-label text-light ps-4"%>
            <div class="col-sm-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"%>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="row mb-3">
            <%= f.label :email, class: "col-sm-2 col-form-label text-light ps-4"%>
            <div class="col-sm-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="row mb-3">
            <%= f.label :password, class: "col-sm-2 col-form-label text-light ps-4"%>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"%>
            </div>
          </div>
        </div>

        <div class="form-group text-center">
          <%= f.submit(@user.new_record? ? "Sign Up!" : "Update account", class: "text-center btn btn-outline-light btn-lg mb-3") %>
        </div>
        
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center mb-3"%>
  </div>
</div>