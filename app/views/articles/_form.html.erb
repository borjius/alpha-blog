<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <!-- use form helpers from rails -->
      <%= form_with(model: @article, local: true, class: "shadow mb-3 bg-info rounded") do |f| %>
        <div class="form-group row">
          <div class="row mb-3 mt-3">
            <%= f.label :title, class: "col-sm-2 col-form-label text-light ps-4"%>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="row mb-3">
            <%= f.label :description, class: "col-sm-2 col-form-label text-light ps-4"%>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"%>
            </div>
          </div>
        </div>

        <div class="form-group text-center">
          <%= f.submit class: "text-center btn btn-outline-light btn-lg mb-3" %>
        </div>
        
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center mb-3"%>
  </div>
</div>