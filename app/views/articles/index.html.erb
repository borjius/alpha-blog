<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <!-- colspan 3 mades actions cover 3 columns-->
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <!-- paths are shown in rails routes --expanded, the prefix for each endpoint-->
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <!-- data confirm if yes or no -->
        <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new Article', new_article_path %></p>